./replace -g '1234567890' '(?<=\d)(?=(\d{3})+$)' ','
./replace "the the" "\b([a-z]+)((?:\s|<[^>]+>)+)(\1\b)" "\033[7m\1\033[m\2\033[7m\3\033[m"
./replace -i -g "The the a A" "\b([a-z]+)((?:\s|<[^>]+>)+)(\1\b)" "\033[7m\1\033[m\2\033[7m\3\033[m"
./match -I 1 '<B>abc</B>123<B>abc</B>' '<B>((?(?!</?B>).)*)</B>'
./match -I 1 '<B>abc<B>123</B>abc</B>' '<B>((?(?!</?B>).)*)</B>'
